<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.yaya.apod.api.MediaType"/>
        <variable
            name="type"
            type="String" />
        <variable
            name="isNew"
            type="boolean" />

        <variable
            name="isLoading"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5pt">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imageImgView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/image_description"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressIndicator"
                    style="@style/Widget.App.CircularProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="@{isLoading}" />

                <ImageView
                    android:id="@+id/favoriteImgView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/image_description"
                    android:padding="4dp"
                    android:src="@drawable/ic_favorite" />

                <ImageView
                    android:id="@+id/newImgView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/image_description"
                    android:padding="4dp"
                    android:src="@drawable/ic_new"
                    android:visibility="@{isNew}" />

                <TextView
                    android:id="@+id/titleTxtView"
                    style="@style/titleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageImgView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="7dp"
                    android:maxLines="4"
                    android:minLines="1"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    tools:text="sample title" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>